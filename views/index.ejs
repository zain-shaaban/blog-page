<div class="author">
    <h1 class="author__heading">Hi I'm Zein.</h1>
    <p class="author__body">Web Developer And Content Creator.</p>
</div>

<img src="/img/hero-image.jfif" alt="Person Looking Out Throught Window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(blog => { %>
            <li>
                <a href="/post/<%= blog._id %>">
                    <span><%= blog.title %></span>
                    <span class="article-list__date"><%= blog.updatedAt.toUTCString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    
    <% if (nextPage) { %>
     <a href="/?page=<%- nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
     
</section>